    "version": "0.2.0",
    "configurations": [
        
        {
             "name": "Debug NestJS",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceFolder}/src/main.ts"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "autoAttachChildProcesses": true
        }
    ]
}